        <input type="text" name="whatsapp" placeholder="Whatsapp" required>
        <input type="text" name="city" placeholder="City" required>

        <button type="submit">Register</button>
      </form>



      <a href="/">
        <img src="/img/back.svg" alt="">
        Back to login
