<%- include("./partials/header.ejs") %>
  <link rel="stylesheet" href="/styles/new.css">

  <body>
    <div class="main">
      <div class="content">

        <img src="/img/logo.svg" alt="Logo">

        <h1>Register a new case</h1>
        <p>Describe your case in details to find a hero to resolve this.
        </p>

        <form action="/new" method="POST">
          <input type="text" name="title" placeholder="Title of the case" required>
          <textarea name="description" placeholder="Description" required></textarea>
          <input type="text" name="price" placeholder="Price in dollar" required>
          <button type="submit">Create</button>
        </form>

        <a href="/cases">
          <img src="/img/back.svg" alt="">
          Back to home
        </a>
      </div>
    </div>

  </body>

  <%- include("./partials/footer.ejs") %>